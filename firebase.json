{
  "hosting": {
    "site": "javiersanz",
    "public": "dist/my-portfolio",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers" : [
      {
        "key" : "Content-Security-Policy",
        "value" : "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; frame-src https://www.linkedin.com;"
      }
    ]
  }
}
